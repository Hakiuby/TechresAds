<Window x:Class="Techres_Marketing.Views.SecondScreen.MainAdsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Techres_Marketing.Views.SecondScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        ShowInTaskbar="False"
        ResizeMode="NoResize" Name="mainAdsWindow"
        Icon="/logo.ico"
        Title="Trình chiếu">
    <Window.Resources>
        <BitmapImage x:Key="logo_loading" UriSource="/Resources/Images/logo.png" />
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Images/BackGround.jpg" Stretch="Fill"></ImageBrush>
        </Grid.Background>
        <ContentControl Name="ContentMain"/>
    </Grid>
</Window>
