<UserControl x:Class="Techres_Marketing.Views.UserControls.TextItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Techres_Marketing.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="TitleBirthDay" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Blue">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="20" Color="White" Direction="0" ShadowDepth="20"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock Grid.Row="1" Name="CustomerName" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Red">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="20" Color="Gray" Direction="10" ShadowDepth="10"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
